@using PagedList.Mvc;
@model PagedList.IPagedList<BOR.Models.Article>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Warsztaty";
}

<div class="row">
    <img src="~/Content/Images/Branding/WARSZTATY.jpg" class="img-responsive img-banner" alt="Off-road main" />
</div>

<div class="container main-menu container-transparent">
    @if (Request.IsAuthenticated)
    {
        <p>
            @Html.ActionLink("Dodaj warsztat", "Create")
        </p>
    }
    @*@using (Html.BeginForm("Index", "Workshops", FormMethod.Get))
    {
        <p>
            Szukaj: @Html.TextBox("searchString", ViewBag.CurrentFilter as String)
            <label class="control-label col-md-2" for="VoivodshipID">Województwo:</label>
            <div class="col-md-10">
                @Html.DropDownList("voivodships", String.Empty)
            </div>
            <input type="submit" value="Szukaj" />
        </p>
