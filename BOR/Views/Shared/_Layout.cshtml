    <div class="container-fluid body-myBody">
        @RenderBody()
        
        @if (ads != null && ads.Count() > 0)
        {
            <div class="row row-ads">
                <div class="ads-description">REKLAMA / PARTNERZY</div>
                <div class="container container-ads">
                    <div class="col-xs-12">
                        
                        <div id="myCarousel" class="carousel slide carousel-small" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                @for (int i = 1; i < Math.Ceiling((double) ads.Count() / (double) 2.0); i++)
                                {
                                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                                }
                            </ol>
                            
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <div class="row">
                                        @{
                                            string link = "";
                                            string name = "";
                                            var ad = ads.First();
                                            var image = ad.Images.FirstOrDefault();
                                            if (image != null)
                                            {
                                            link = image.Link;
                                            name = image.Name;
                                            }
                                        }
                                        @if (ads.Count() > 1)
                                        {
                                            <div class="col-xs-6">
                                                <a href="@ad.Www">
                                                    <img class="img-responsive center-block" src="@link" alt="@name">
                                                </a>
                                            </div>
                                            link = "";
                                            name = "";
                                            ad = ads.ElementAt(1);
                                            image = ad.Images.FirstOrDefault();
                                            if (image != null)
                                            {
                                                link = image.Link;
                                                name = image.Name;
                                            }
                                            <div class="col-xs-6">
                                                <a href="@ad.Www">
                                                    <img class="img-responsive center-block" src="@link" alt="@name">
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-xs-12">
                                                <a href="@ad.Www">
                                                    <img class="img-responsive center-block" src="@link" alt="@name">
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                                @for (int i = 2; i < ads.Count(); i += 2)
                                {
                                    link = "";
                                    name = "";
                                    ad = ads.ElementAt(i);
                                    image = ad.Images.FirstOrDefault();
                                    if (image != null)
                                    {
                                        link = image.Link;
                                        name = image.Name;
                                    }
                                    if (i + 1 == ads.Count())
                                    {
                                        <div class="item">
                                            <div class="row">
                                                <div class="col-xs-12">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="item">
                                            <div class="row">
                                                <div class="col-xs-6">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                                @{
                                                    ad = ads.ElementAt(i + 1);
                                                    image = ad.Images.FirstOrDefault();
                                                    if (image != null)
                                                    {
                                                        link = image.Link;
                                                        name = image.Name;
                                                    }
                                                }
                                                <div class="col-xs-6">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Poprzedni</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Następny</span>
                            </a>
                        </div>

                        
                        <div id="myCarouselBig" class="carousel slide carousel-big" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#myCarouselBig" data-slide-to="0" class="active"></li>
                                @for (int i = 1; i < Math.Ceiling((double)ads.Count() / (double)4.0); i++)
                                {
                                    <li data-target="#myCarouselBig" data-slide-to="@i"></li>
                                }
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                @for (int i = 0; i < ads.Count(); i += 4)
                                {
                                    link = "";
                                    name = "";
                                    ad = ads.ElementAt(i);
                                    image = ad.Images.FirstOrDefault();
                                    if (image != null)
                                    {
                                        link = image.Link;
                                        name = image.Name;
                                    }
                                    
                                    <div class="@(i > 0 ? "item" : "item active")">
                                        <div class="row"> 
                                            @if (i + 1 == ads.Count())
                                            {
                                                <div class="col-xs-12">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                            }
                                            else if (i + 2 == ads.Count())
                                            {
                                                <div class="col-xs-6">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                                link = "";
                                                name = "";
                                                ad = ads.ElementAt(i + 1);
                                                image = ad.Images.FirstOrDefault();
                                                if (image != null)
                                                {
                                                    link = image.Link;
                                                    name = image.Name;
                                                }
                                                <div class="col-xs-6">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                            }
                                            else if (i + 3 == ads.Count()) {
                                                <div class="col-xs-4">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                                for(int j = 1; j < 3; j++) {
                                                    link = "";
                                                    name = "";
                                                    ad = ads.ElementAt(i + j);
                                                    image = ad.Images.FirstOrDefault();
                                                    if (image != null)
                                                    {
                                                        link = image.Link;
                                                        name = image.Name;
                                                    }
                                                    <div class="col-xs-4">
                                                        <a href="@ad.Www">
                                                            <img class="img-responsive center-block" src="@link" alt="@name">
                                                        </a>
                                                    </div>
                                                }
                                            }
                                            else 
                                            {
                                                <div class="col-xs-3">
                                                    <a href="@ad.Www">
                                                        <img class="img-responsive center-block" src="@link" alt="@name">
                                                    </a>
                                                </div>
                                                for(int j = 1; j < 4; j++) {
                                                    link = "";
                                                    name = "";
                                                    ad = ads.ElementAt(i + j);
                                                    image = ad.Images.FirstOrDefault();
                                                    if (image != null)
                                                    {
                                                        link = image.Link;
                                                        name = image.Name;
                                                    }
                                                    <div class="col-xs-3">
                                                        <a href="@ad.Www">
                                                            <img class="img-responsive center-block" src="@link" alt="@name">
                                                        </a>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                } 
                            </div>        
                            <a class="left carousel-control" href="#myCarouselBig" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Poprzedni</span>
                            </a>
                            <a class="right carousel-control" href="#myCarouselBig" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Następny</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

